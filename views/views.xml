    <record model='ir.ui.view' id='accountcore_voucher_list'>
      <field name='name'>记账凭证列表</field>
      <field name='model'>accountcore.voucher</field>
      <field name='arch' type='xml'>
        <tree>
          <field name='voucherdate' />
          <field name='soucre' />
          <field name='org' />
          <field name='ruleBook' />
          <field name='number' />
          <field name='appendixCount' />
          <field name='createUser' />
          <field name='reviewer' />
          <field name='entrys' />
          <!-- <field name='voucherFile'/> -->
        </tree>
      </field>
    </record>
    <record model='ir.ui.view' id='accountcore_voucher_form'>
      <field name='name'>记账凭证</field>
      <field name='model'>accountcore.voucher</field>
      <field name='arch' type='xml'>
        <form>
          <header>
            <button string='审核凭证' type='object' name='reviewing' attrs="{'invisible':[('state','=','reviewed')]}"></button>
            <button string='取消审核' type='object' name='cancelReview' attrs="{'invisible':[('state','=','creating')]}"></button>
            <field name='state' widget='statusbar'></field>
          </header>
          <sheet>
            <center>
              <h1>记账凭证</h1>
            </center>
            <div>
              <center>
                <field name='voucherdate' nolabel="1" col='1' attrs="{'readonly':[('state','=','reviewed')]}" />
              </center>
            </div>
            <group col='4' class='oe_grey'>
              <field name='org' col='2' attrs="{'readonly':[('state','=','reviewed')]}" />
              <field name='ruleBook' col='2' attrs="{'readonly':[('state','=','reviewed')]}" />
              <field name='number' col='1' attrs="{'readonly':[('state','=','reviewed')]}" />
              <field name='appendixCount' col='1' attrs="{'readonly':[('state','=','reviewed')]}" />
            </group>
            <field name='entrys' context="{'disable_open': True}" attrs="{'readonly':[('state','=','reviewed')]}">
              <tree editable="bottom">
                <field name='sequence' widget='handle'></field>
                <field name='explain'></field>
                <field name='account'></field>
                <field name='items' widget="many2many_tags"></field>
                <field name='damount'></field>
                <field name='camount'></field>
                <field name='cashFlow'></field>
              </tree>
            </field>
            <group col='12' class='oe_grey'>
              <field name='createUser' />
              <field name='reviewer' />
              <field name='soucre' />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id='accountcore_userdefaults_form' model='ir.ui.view'>
      <field name='name'>配置新增凭证默认值</field>
      <field name='model'>accountcoure.userdefaults</field>
